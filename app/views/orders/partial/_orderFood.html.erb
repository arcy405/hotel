<div id="main">
  <%# <button class="openbtn" onclick="openNav()">â˜° Open Sidebar</button>   %>
  <%= render partial: 'shared/navbar'%>
<main>
    <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
    <%= link_to  new_food_path do %>
            <button type="button" class="btn btn-primary mb-3">
              cart
            </button>
          <% end %>

        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
          <% @foods.each do |food| %>
            <div class="col">
                <div class="card h-100 shadow-sm"> <img src="<%= food.image %>" class="card-img-top" alt="...">
                    <div class="label-top shadow-sm"><%= food.category %></div>
                    <div class="card-body">
                        <div class="clearfix mb-3"> <span class="float-start badge rounded-pill bg-primary"><%= food.name %></span> <span class="float-end price-hp">Rs.<%= food.price %></span> </div>
                        <h5 class="card-title">food description </h5>
                        <div class="text-center my-4"> 
                        
                         <%= form_with(model: @order, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.submit "Sign Up" %>

<% end %>

                          <a href="#" class="btn btn-warning">
                            order food
                          </a>
                        </div>
                        <div class="float-start price-hp"><%= food.availability %></div>
                    </div>
                </div>
            </div>
          <% end %>  
        </div>
    </div>
</main>
</div>
