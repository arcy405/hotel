<h2>Sign up</h2>


<%# ----------------------new form------------- %>
<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>


        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Split page!</h3>
                            <p class="text-muted mb-4">Create a login split page using Bootstrap 4.</p>
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                                <div class="form-group mb-3">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "inputEmail", type: "email", placeholder: "Email address" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="form-group mb-3">
                                    <%= f.text_field :name, autofocus: true, autocomplete: "name",id: "inputName", type: "name", placeholder: "First Name" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="form-group mb-3">
                                    <%= f.text_field :sirname, autofocus: true, autocomplete: "sirname",id: "inputSirname", type: "name", placeholder: "Last Name" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="form-group mb-3">
                                    <%= f.text_field :role, autofocus: true, autocomplete: "role",id: "inputRole", type: "name", placeholder: "Role" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="form-group mb-3">
                                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",id: "inputName", type: "password", placeholder: "Password" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="form-group mb-3">
                                    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "name",id: "inputName", type: "password", placeholder: "Confirm Password" ,class: "form-control rounded-pill border-0 shadow-sm px-4" %>
                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" checked class="custom-control-input">
                                    <label for="customCheck1" class="custom-control-label">Remember password</label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">Sign in</button>
                                <div class="text-center d-flex justify-content-between mt-4"><p>
                                    <%= render "devise/shared/links" %>
                                </p></div>
                            <% end %>
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>
